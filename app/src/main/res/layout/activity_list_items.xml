<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacoground"
    tools:context=".List_Items">


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        tools:ignore="MissingConstraints"
        android:paddingTop="45dp"
        android:paddingStart="10dp"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="361dp"
        android:layout_height="484dp"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/white"
        android:layout_alignParentEnd="true"
        android:background="@color/teal_200"
        android:clickable="true"
        android:divider="#AAAAAA"
        android:layout_marginTop="100dp"
        android:dividerHeight="0.5pt"
        android:layout_marginStart="50dp"
        android:longClickable="true"
        android:textColor="@color/white"
        android:scrollbars="horizontal"
        android:cacheColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23">


    </ListView>

    <Button
        android:id="@+id/deleteList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:text="Delete"
        android:textSize="20sp"
        android:backgroundTint="#F7F5EB"
        android:textColor="@color/black"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView" />

    <Button
        android:id="@+id/editList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:backgroundTint="#F7F5EB"
        android:textColor="@color/black"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView" />

</androidx.constraintlayout.widget.ConstraintLayout>